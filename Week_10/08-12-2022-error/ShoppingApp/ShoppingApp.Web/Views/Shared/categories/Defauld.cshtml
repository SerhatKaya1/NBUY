@using ShoppingApp.Entity.Concrete
@model List<Category>
<div class="list-group">
    <a class="list-group-item list-group-action 
@(ViewBag.SelectedCategory==null ? "active" : "")"
    asp-controller="Home"
    asp-controller="Index"
    asp-route-category=""
    >Tümünü Göster</a>

    @foreach (category in Model)
    {
        <a class="list-group-item list-group-action
@(ViewBag.SelectedCategory==null ? "active" : "")"
       asp-controller="Home"
       asp-controller="Index"
       asp-route-category="">@category.Name</a>

    }
</divclas>
