@using ShoppingApp.Web.Models.Dtos
@model ProductDetailsDto

<div>@Model.Id</div>
<div>@Model.Name</div>
<div>@Model.Price</div>
<div>@Model.ImageUrl</div>
<div>@Model.Url</div>
<div>@Model.Description</div>
<div class="card">
  @*  KATAGORİLER :*@

    @foreach (var category in Model.Categories)
    {
        <div class="btn btn-success mt-3">@category.Name</div>
        <div class="btn btn-success mt-3">@category.Price</div>
        <div class="btn btn-success mt-3">@category.Description</div>
        <div class="btn btn-success mt-3">@category.Url</div>
        

    }
</div>

