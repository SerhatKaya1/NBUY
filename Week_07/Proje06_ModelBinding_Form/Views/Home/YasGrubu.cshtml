@{
    ViewData["Title"] = "YasGrubu";
}

<h1>Yaş Grubu Hesaplama</h1>
<hr>
<h6>Lütfen Yaşınızı Giriniz</h6>
<form asp-controller="Home" method="post">
    <label class="form-label">yas</label>
    <input type="text" class="form-control" name="yas">
    <input type="submit" value="Hesapla" class="btn-primary mt-3">
    <label class="form-label">ad</label>
</form>
@if (ViewBag.YasGrubu!=null)
{
    <div class="mt-3 alert alert-succes">@ViewBag.YasGrubu</div>
}
<span>
    @ViewBag.YasGrubu
</span>
